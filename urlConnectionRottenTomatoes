				input = input.remove(')');
				input = movie_name.replace(' ', '_');

			        	
			  	String rottenTomatoes = "https://www.rottentomatoes.com/m/"+ input;
			  			
              rottenTomatoes = new URL(rottenTomatoesPage);
        			URLConnection yc = rottenTomatoes.openConnection();
        			BufferedReader in = new BufferedReader(new InputStreamReader(
                                    yc.getInputStream()));
        
        			String inputLine;
        			String line="";                		
      
